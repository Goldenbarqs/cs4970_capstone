<?xml version="1.0" encoding="utf-8"?>
<Map srs="+proj=latlong +datum=WGS84" bgcolor="transparent">
    <Style name="State Base">
		<Rule>
            <PolygonSymbolizer>
                <CssParameter name="fill">#008B57</CssParameter>
            </PolygonSymbolizer>
            <LineSymbolizer>
                <CssParameter name="stroke">#000000</CssParameter>
                <CssParameter name="stroke-width">0.5</CssParameter>
            </LineSymbolizer>
        </Rule>
	</Style>

	<Layer name="state_base" srs="+proj=latlong +datum=WGS84" status="1" clear_label_cache="0">
        <StyleName>State Base</StyleName>
        <Datasource>
            <Parameter name="dbname">cs4970_capstone</Parameter>
            <Parameter name="host">127.0.0.1</Parameter>
            <Parameter name="password"></Parameter><!--intentionally left blank due to public repo; server will trust connection from localhost on this DB-->
            <Parameter name="table">places_state</Parameter>
            <Parameter name="type">postgis</Parameter>
            <Parameter name="user">cs4970_capstone</Parameter>
        </Datasource>
    </Layer>
</Map>
